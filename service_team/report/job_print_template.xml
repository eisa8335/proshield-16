<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_job_document">
    <t t-call="report.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
         
        <t t-set="company" t-value="res_company"/>
         <div class="page">

            <pre style="text-align:center;font-size:20px;color:000000;background: ff9900;" 
            class="tab"><strong><b>JOB DETAILS</b></strong></pre>
            <br/>
            
            <pre style="text-align:center;font-size:16px;color:000000;background: ff9900;" 
            class="tab"><strong>Job ID</strong>: <span t-field="doc.job_id"/></pre>
            
            <pre style="text-align:center;font-size:16px;color:000000;background: ff9900;" 
            class="tab"><strong>Service Team</strong>: <span t-field="doc.service_team"/></pre>
            
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Customer Name</strong>: <span t-field="doc.partner_id"/>
            <strong>Contact Person</strong>: <span t-field="doc.contact_id.name"/>
            <strong>Mobile</strong>: <span t-field="doc.mobile"/>
            <strong>Phone</strong>: <span t-field="doc.phone"/></pre>

            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Area</strong>: <span t-field="doc.area_id"/>
            <strong>Address</strong>: <span t-field="doc.street"/>
            <strong>Address</strong>: <span t-field="doc.street2"/>
            <strong>Premise Type</strong>: <span t-field="doc.premise_type_id"/>
            <strong>Longitude</strong>: <span t-field="doc.partner_latitude"/>
            <strong>Longitude</strong>: <span t-field="doc.partner_longitude"/></pre>
            
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Start Time</strong>: <span t-field="doc.start"/>
            <strong>End Time</strong>: <span t-field="doc.stop"/></pre>
            
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Warranty</strong>: <span t-field="doc.warranty"/>
            <t t-if="doc.warranty_counter is not False">
            <strong>Warranty Remaining Days</strong>: <span t-field="doc.warranty_counter"/></t></pre>
            
            <t t-if="doc.followup_visit is not False">
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Follow Up</strong>: <span t-field="doc.followup_visit"/>
            <strong>Follow Up After</strong>: <span t-field="doc.followup_days"/></pre>
            </t>

            <t t-if="doc.call_back is not False">
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Callback</strong>: <span t-field="doc.call_back"/>
            <strong>Callback Source Team</strong>: <span t-field="doc.call_back_team_id"/></pre>
            </t>
            
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Service Type</strong>: <span t-field="doc.product_id"/>
            <strong>Job Type</strong>: <span t-field="doc.job_type_id"/></pre>

            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Amount</strong>: <span t-field="doc.amount"/> AED
            <strong>Paid Amount</strong>: <span t-field="doc.paid_amount"/> AED
            <strong>Balance</strong>: <span t-field="doc.balance"/> AED</pre>
            
            <pre style="text-align:left;font-size:16px;color:000000;" class="tab">
            <strong>Contract No.</strong>: <span t-field="doc.contract_id"/>
            <strong>Remarks</strong>: <span t-field="doc.remarks"/></pre>
            <br/>
            <br/>
            <pre style="text-align:center;font-size:16px;color:000000;background: ff9900;" class="tab">
            <span t-field="company.name"/></pre>
            
        </div>

          
       
    </t>
</template>


<template id="report_job">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="service_team.report_job_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>